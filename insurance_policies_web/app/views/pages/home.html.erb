<h1>Home</h1>

<% if current_user %>
<h2><%= current_user.email %></h2>
<%= image_tag(current_user.avatar_url) %><br>


<h3>List of Policies</h3>
<% @policies.each do |policy| %>
  <div>
    <p><strong>Policy ID:</strong> <%= policy["policyId"] %></p>
    <p><u>Issue Date:</u> <%= policy["issueDate"] %></p>
    <p><u>Coverage End Date:</u> <%= policy["coverageEndDate"] %></p>
    <p><u>Insured Name:</u> <%= policy["insuredName"] %></p>
  </div>
<% end %>


<%= link_to "Edit Account", edit_user_registration_path %>
<%= button_to "Logout", destroy_user_session_path, method: :delete %>

<% else %>
<%= link_to "Login", new_user_session_path %>
<%= link_to "Create Account", new_user_registration_path %>
<% end %>
